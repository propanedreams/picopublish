@model Product

@{
    ViewBag.Title = "Edit Product";
    List<int> ids = ViewBag.AllIds;
}

<h2>Edit Product</h2>

<form asp-action="Edit" method="get" id="productForm">
    <div class="form-group">
        <label asp-for="Id" class="control-label">Select Product ID</label>
        <select asp-for="Id" class="form-control" onchange="document.getElementById('productForm').submit();">
            @foreach (int i in ids)
            {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
</form>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="ViewProducts" class="btn btn-secondary">Cancel</a>
    </div>
</form>
